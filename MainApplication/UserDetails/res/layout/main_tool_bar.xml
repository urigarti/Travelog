<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rightMenuBar"
    android:layout_width="93dp"
    android:layout_height="fill_parent"
    android:layout_alignParentRight="true"
    android:layout_gravity="right"
    android:gravity="right"
    android:layoutDirection="rtl">

    <com.travelog.utils.buttons.TravelogImageButton
        android:id="@+id/main_menu_home"
        android:clickable="true"
        android:tag="main_menu_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:background="#80808080"
        android:scaleType="fitCenter"
        android:src="@drawable/main_menu_home_selector"/>

    <com.travelog.utils.buttons.TravelogImageButton
        android:id="@+id/main_menu_map"
        android:clickable="true"
        android:tag="main_menu_map"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/main_menu_home"
        android:background="#80808080"
        android:scaleType="fitCenter"
        android:src="@drawable/main_menu_map_selector"/>

    <com.travelog.utils.buttons.TravelogImageButton
        android:id="@+id/main_menu_user_profile"
        android:clickable="true"
        android:tag="main_menu_user_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/main_menu_map"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/main_menu_user_profile_selector"/>

    <com.travelog.utils.buttons.TravelogImageButton
        android:id="@+id/main_menu_edit_diary"
        android:clickable="true"
        android:tag="main_menu_edit_diary"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/main_menu_user_profile"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/main_menu_edit_diary_selector"/>

    <com.travelog.utils.buttons.TravelogImageButton
        android:id="@+id/main_menu_sort"
        android:clickable="true"
        android:tag="main_menu_sort"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/main_menu_edit_diary"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/main_menu_sort_selector"/>

    <com.travelog.utils.buttons.TravelogImageButton
        android:id="@+id/main_menu_add_to_diary"
        android:clickable="true"
        android:tag="main_menu_add_to_diary"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/main_menu_sort"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/main_menu_add_to_diary_selector"/>

    <com.travelog.utils.buttons.TravelogImageButton
        android:id="@+id/main_menu_selection"
        android:clickable="true"
        android:tag="main_menu_selection"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/main_menu_add_to_diary"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/main_menu_selection_selector"/>

    <com.travelog.utils.buttons.TravelogImageButton
        android:id="@+id/main_menu_share"
        android:clickable="true"
        android:tag="main_menu_share"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/main_menu_selection"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/main_menu_share_selector"/>

    <com.travelog.utils.buttons.TravelogImageButton
        android:id="@+id/main_menu_delete"
        android:clickable="true"
        android:tag="main_menu_delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/main_menu_share"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/main_menu_delete_selector"/>
</RelativeLayout>