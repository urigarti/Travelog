<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rightMenuBar"
    android:layout_width="93dp"
    android:layout_height="726dp"
    android:layout_alignParentRight="true"
    android:layout_gravity="right"
    android:gravity="right"
    android:layoutDirection="rtl">

    <ImageButton
        android:id="@+id/mainPanelHome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:background="#80808080"
        android:scaleType="fitCenter"
        android:src="@drawable/home_selected"/>

    <ImageButton
        android:id="@+id/mainPanelMap"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mainPanelHome"
        android:background="#80808080"
        android:scaleType="fitCenter"
        android:src="@drawable/map_not_selected"/>

    <ImageButton
        android:id="@+id/mainPanelUserDetails"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mainPanelMap"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/user_profile_not_selected"/>

    <ImageButton
        android:id="@+id/mainPanelEditDiary"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mainPanelUserDetails"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/editing_diary_not_selected"/>

    <ImageButton
        android:id="@+id/mainPanelSorting"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mainPanelEditDiary"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/sorting_not_selected"/>

    <ImageButton
        android:id="@+id/mainPanelAddToDiary"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mainPanelSorting"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/add_to_diary_not_selected"/>

    <ImageButton
        android:id="@+id/mainPanelSelections"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mainPanelAddToDiary"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/selection_not_selected"/>

    <ImageButton
        android:id="@+id/mainPanelSharing"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mainPanelSelections"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/sharing_not_selected"/>

    <ImageButton
        android:id="@+id/mainPanelDeletions"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mainPanelSharing"
        android:background="#80808080"
        android:layoutDirection="ltr"
        android:scaleType="fitCenter"
        android:src="@drawable/delete_not_selected"/>
</RelativeLayout>