<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:custom="http://schemas.android.com/apk/res/com.travelog.mainapplication.mainmenu"
			android:id="@+id/diary_operations_fragment"
			android:layout_width="300dp"
			android:layout_height="500dp"
			android:rowCount="3"
			android:columnCount="4">

	<com.travelog.mainapplication.custom.buttons.OptionMenuComponent
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/option_menu_add_diary"
			android:layout_row="2"
			android:layout_column="2"
			custom:optionName="Add Item to Diary"/>
	<com.travelog.mainapplication.custom.buttons.OptionMenuComponent
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/option_menu_edit_diary"
			android:layout_row="2"
			android:layout_column="3"
			custom:optionName="Edit Existing Diary"/>
</GridLayout>